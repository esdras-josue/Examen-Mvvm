<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Examen_Mvvm"
             x:Class="Examen_Mvvm.MainPage">
    
    <StackLayout Padding="20">
        <Entry Text="{Binding ProductoUno}" Placeholder="Ingrese el precio del producto uno" Keyboard="Numeric" FontSize="15" />
        <Entry Text="{Binding ProductoDos}" Placeholder="Ingrese el precio del producto dos" Keyboard="Numeric" FontSize="15"/>
        <Entry Text="{Binding ProductoTres}" Placeholder="Ingrese el precio del producto tres" Keyboard="Numeric" FontSize="15" />

        <Label Text="{Binding Mensajerror}"
               TextColor="Red"
               FontSize="15"
               IsVisible="{Binding Mensajerror,Converter={StaticResource StringToBool}}"
               />
        <Label Text="Sub-total: "/>
        <Entry Text="{Binding SubTotal}" IsReadOnly="true"/>
        <Label Text="Descuento: "/>
        <Entry Text="{Binding Descuento}" IsReadOnly="True"/>
        <Label Text="Total a pagar: "/>
        <Entry Text="{Binding TotalPagar}" IsReadOnly="True"/>

        <StackLayout Orientation="Horizontal" Spacing="10">
            <Button Text="Calcular" Command="{Binding CalcularProductoCommand}"/>
            <Button Text="Limpiar" Command="{Binding LimpiarProductoCommand}"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
